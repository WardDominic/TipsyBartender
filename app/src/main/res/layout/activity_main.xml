<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="76dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Sparkling"
                android:layout_width="538.6px"
                android:layout_height="461.7px"
                android:layout_gravity="center"
                app:srcCompat="@drawable/sparkling_" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iconic Cocktails "
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="32dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PinaColada"
                    android:layout_width="528px"
                    android:layout_height="667px"
                    app:srcCompat="@drawable/pina_colada002" />

                <ImageView
                    android:id="@+id/EspressoMartini"
                    android:layout_width="528px"
                    android:layout_height="667px"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/espresso_martini_" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </RelativeLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/SupirseMe"
                android:layout_width="528px"
                android:layout_height="667px"
                app:srcCompat="@drawable/suprise_me_" />

            <Button
                android:id="@+id/mojito"
                android:layout_width="match_parent"
                android:layout_height="667px"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/Mojtio"
                android:layout_width="528px"
                android:layout_height="667px"
                app:srcCompat="@drawable/mojito_" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>