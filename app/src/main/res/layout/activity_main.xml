        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mojito_" />

    <ImageView
        android:id="@+id/SupirseMe"
        android:layout_width="528px"
        android:layout_height="667px"
        android:layout_marginStart="207dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/suprise_me_" />

    <ImageView
        android:id="@+id/PinaColada"
        android:layout_width="528px"
        android:layout_height="667px"
        android:layout_marginStart="2dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pina_colada002" />

    <ImageView
        android:id="@+id/EspressoMartini"
        android:layout_width="528px"
        android:layout_height="667px"
        android:layout_gravity="right"
        android:layout_marginStart="209dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/espresso_martini_" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="472dp"
        android:text="Iconic Cocktails "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="672dp"
        android:text="Discover"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


